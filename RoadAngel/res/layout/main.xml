<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ImageView
            android:id="@+id/logoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/selectMessage"
            android:text="Select Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoView" />
    <Spinner
            android:id="@+id/messageSelect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectMessage"
            android:layout_alignParentLeft="true"
            />
    <TextView
            android:id="@+id/enterLicensePlate"
            android:text="License Plate #"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/messageSelect" />
    <EditText
            android:id="@+id/enterLicense"
            android:password="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterLicensePlate"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/selectStateLabel"
            android:text="Select State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/enterLicense" />
    <Spinner
            android:id="@+id/selectState"
            android:password="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectStateLabel"
            android:layout_alignParentLeft="true"
            android:prompt="@string/selectstate" />
    <Button
            android:id="@+id/submitButton"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectState"
            android:layout_alignParentRight="true"/>
</RelativeLayout>

